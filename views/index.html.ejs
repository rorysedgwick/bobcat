<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="UTF-8">
    <title>bobcat</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />

  </head>

  <body>
    <div ng-controller="TodoCtrlr">
      <ul>
        <li ng-repeat="todo in todos">
          {{todo.title}}
          <button ng-click="deleteTodo(todo)">Delete</button>
        </li>
      </ul>
      <form ng-submit="addTodo()">
        <input ng-model="newTodo.title">
        <input type="submit" value="Add">
      </form>
      <button ng-click="fetchTFLData()">Fetch TFL data</button>
    </div>

    <div ng-controller="MapCtrlr">
      <leaflet defaults="defaults" markers="markers" lf-center="center" width="100%" height="600px"></leaflet>

    </div>

    <script src="/js/leaflet.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/angular-simple-logger.js"></script>
    <script src="/js/angular-leaflet-directive.js"></script>

  </body>
</html>
